@model DAB.DTO.Churrasco

@{
    ViewBag.Title = "Details";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Detalhes do churras, tchê!
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="~/Home"><i class="fa fa-dashboard"></i> Home</a>
        </li>
        <li>
            <a href="~/Churrasco" class="active">Churrasco</a>
        </li>

    </ol>
</section>

<div class="form-horizontal">
    <hr />
    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        <div class="left"><label>Dia:</label> </div>
        <div class="col-md-10">
            <div class="col-md-10">
                <blockquote>@Model.Quando.ToString("dd/MM/yyyy")</blockquote>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="left"><label>Porque?</label> </div>
        <div class="col-md-10">
            <blockquote>@Model.Porque</blockquote>
        </div>
    </div>

    <div class="form-group">
        <div class="left"><label>Quantos pila?</label> </div>
        <div class="col-md-10">
            <blockquote>
                Com bebida: @Model.PrecoSugeridoComBebido.ToString("C")
            </blockquote>

            <blockquote>
                Sem bebida @Model.PrecoSugeridoSemBebida.ToString("C")
            </blockquote>

        </div>

        <div class="form-group">
            &nbsp;
            <div class="col-md-10">
                <div class="text-right">
                    <input type="button" id="adicionarParticipante" value="+ Adicionar participante" class="btn btn-primary" />
                </div>
            </div>
        </div>

        <div class="form-group" style="border: 1px solid black">
            &nbsp;
            <div class="col-md-10">
                &nbsp;
            </div>
        </div>

    </div>

</div>